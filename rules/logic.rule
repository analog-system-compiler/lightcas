NAME.ANDC( @in1, @in2, @out, @GND, VCC ) :=
{
	/* nodal equations */
	NAME.Uin1 = ACROSS( @in1, @GND );
	NAME.Uin2 = ACROSS( @in2, @GND );
	NAME.Uout = ACROSS( @out, @GND );
	NAME.Iout = THROUGH( @out, @GND );
	
	/* physical equation */				
	NAME.Uout = VCC * ( ( NAME.Uin1 > (VCC/2)) & ( NAME.Uin2 > (VCC/2) ) )
};

NAME.ORC( @in1, @in2, @out, @GND, VCC ) :=
{
	/* nodal equations */
	NAME.Uin1 = ACROSS( @in1, @GND );
	NAME.Uin2 = ACROSS( @in2, @GND );
	NAME.Uout = ACROSS( @out, @GND );
	NAME.Iout = THROUGH( @out, @GND );
	
	/* physical equation */				
	NAME.Uout = VCC * ( ( NAME.Uin1 > (VCC/2) ) | ( NAME.Uin2 > (VCC/2) ) )
};

NAME.XORC( @in1, @in2, @out, @GND, VCC ) :=
{
	/* nodal equations */
	NAME.Uin1 = ACROSS( @in1, @GND );
	NAME.Uin2 = ACROSS( @in2, @GND );
	NAME.Uout = ACROSS( @out, @GND );
	NAME.Iout = THROUGH( @out, @GND );
	
	/* physical equation */				
	NAME.Uout = VCC * XOR( ( NAME.Uin1 > (VCC/2) ) ( NAME.Uin2 > (VCC/2) ) )	
};

NAME.NOTC( @in, @out, @GND, VCC ) :=
{
	/* nodal equations */
	NAME.Uin = ACROSS( @in, @GND );
	NAME.Uout = ACROSS( @out, @GND );
	NAME.Iout = THROUGH( @out, @GND );
	
	/* physical equation */				
	NAME.Uout = VCC * (NAME.Uin <= (VCC/2))
};

NAME.SRFFC( @in1, @in2, @out, @GND, VCC ) :=
{
	/* nodal equations */
	NAME.Uin1 = ACROSS( @in1, @GND );
	NAME.Uin2 = ACROSS( @in2, @GND );
	NAME.Uout = ACROSS( @out, @GND );
	NAME.Iout = THROUGH( @out, @GND );
	
	/* physical equation */				
	NAME.Uout = VCC * ( ( ( NAME.Uout>(VCC/2)) | ( NAME.Uin1 > (VCC/2)) ) & ( NAME.Uin2 > (VCC/2) ) )
};

NAME.FFC( @in, @clk, @out, @GND, VCC ) :=
{
	/* nodal equations */
	NAME.Uin  = ACROSS( @in, @GND );
	NAME.Uclk = ACROSS( @clk, @GND );
	NAME.Uout = ACROSS( @out, @GND );
	NAME.Iout = THROUGH( @out, @GND );
	
	/* physical equation */				
	NAME.aux1  = ( NAME.Uclk > (VCC/2) );
	NAME.aux2  = ( NAME.Uclk > (VCC/2) ) & ( NAME.aux1 == 0 );
	NAME.Uout = VCC * ( NAME.aux2 == 1 ? NAME.Uin> (VCC/2) : NAME.Uout> (VCC/2) )
};
